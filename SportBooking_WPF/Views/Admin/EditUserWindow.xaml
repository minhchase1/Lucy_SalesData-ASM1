<Window x:Class="SportBooking_WPF.Views.Admin.EditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportBooking_WPF.Views.Admin"
        mc:Ignorable="d"
        Title="EditUserWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen" Background="LightGoldenrodYellow">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Chỉnh sửa người dùng" FontSize="20" FontWeight="Bold" Margin="0 0 0 20"/>

            <Label Content="Họ tên"/>
            <TextBox x:Name="txtFullName" />

            <Label Content="Email"/>
            <TextBox x:Name="txtEmail" IsReadOnly="True"/>

            <Label Content="SĐT"/>
            <TextBox x:Name="txtPhone"/>

            <Label Content="Ngày sinh"/>
            <DatePicker x:Name="dpDob"/>

            <Label Content="Địa chỉ"/>
            <TextBox x:Name="txtAddress"/>

            <Button Content="Lưu" Margin="0 20 0 0" Height="30"
                    Click="BtnSave_Click"/>
        </StackPanel>
    </Grid>
</Window>
